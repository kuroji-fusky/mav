{
  "name": "myartverse",
  "version": "0.0.5",
  "license": "Apache-2.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "dotenv -- turbo dev --filter=web-client --no-daemon",
    "dev:desktop": "cd ./apps/desktop && tauri dev",
    "build": "turbo build --filter=web",
    "build:all": "turbo build --concurrency 2",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint --quiet .",
    "lint:format": "eslint --fix --quiet . && prettier --write .",
    "knip": "knip"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.1.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.56.0",
    "eslint-config-import": "^0.13.0",
    "eslint-config-next": "^14.2.5",
    "eslint-plugin-unused-imports": "^3.2.0",
    "knip": "^5.16.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "turbo": "^1.13.3"
  }
}
